<h1>
	Запись
</h1>


<script type="text/javascript">
  $(function(){

   $('#datetimepicker').datetimepicker();

  });

</script>

<form action="/visit" method="POST" role="form">

  <div class="form-group">
    <label>Ваше имя.</label>
    <input name="name" type="text" class="form-control" placeholder="Ваше имя" value="<%= @name %>">
  </div>   



  <div class="form-group">
    <label>Номер телефона.</label>
    <input name="phone"type="text" class="form-control" placeholder="Номер телефона" value="<%= @phone %>">
  </div>
       

  <div class="form-group">
    <label>время записи</label>
    <input id="datetimepicker" name="text" type="note" class="form-control" placeholder="Время записи" value="<%= @note %>">
  </div>


<div class="form-group">
    <label>Выберите прихмакхера</label>
    <select name="barber" class="form-control">
    <option <%= @barber == 'Денис Лобок' ? 'selected' : ''%>>Денис Лобок</option>
    <option <%= @barber == 'Максим лысый болт' ? 'selected' : ''%>>Максим лысый болт</option>
    <option <%= @barber == 'Дима волосатый жопа' ? 'selected' : ''%>>Дима волосатый жопа</option>
  </select> 
  </div>




<button type="submit" class="btn btn-primary">Sign in</button>
  
  
</form>